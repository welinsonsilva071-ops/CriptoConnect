
{
  "rules": {
    ".read": false,
    ".write": false,
    "users": {
      // Permite que qualquer usuário autenticado leia a lista de usuários para poder fazer a busca.
      ".read": "auth != null",
      "$uid": {
        // Permite que um usuário escreva apenas no seu próprio perfil.
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['uid', 'displayName', 'email', 'createdAt', 'phone']) && newData.child('uid').val() === $uid && newData.child('displayName').isString() && newData.child('displayName').val().length > 0 && newData.child('email').isString() && newData.child('phone').isString() && (!newData.hasChild('photoURL') || newData.child('photoURL').isString())",
        "chats": {
          // Permite que um usuário adicione um chat ao perfil de outro, o que é necessário para iniciar uma conversa.
          ".write": "auth != null"
        }
      },
      ".indexOn": ["phone"]
    },
    "chats": {
      "$chatId": {
        ".read": "root.child('chats').child($chatId).child('members').child(auth.uid).exists()",
        ".write": "auth != null && (newData.child('members').child(auth.uid).exists() || !data.exists())",
        "members": {
           "$memberId": {
             ".write": "auth != null && $memberId === auth.uid"
           }
        },
        "messages": {
          "$messageId": {
            ".validate": "newData.hasChildren(['author', 'content', 'timestamp']) && newData.child('author').val() === auth.uid && newData.child('content').isString()"
          }
        }
      }
    },
    "calls": {
      "$callId": {
        // O destinatário e o chamador podem ler os dados da chamada.
        ".read": "auth != null && (data.child('callerId').val() === auth.uid || data.child('receiverId').val() === auth.uid)",
        // Apenas o chamador pode criar a chamada (escrever quando não há dados).
        // Ambos os participantes podem atualizar uma chamada existente (por exemplo, para alterar o status).
        ".write": "auth != null && ((!data.exists() && newData.child('callerId').val() === auth.uid) || (data.exists() && (data.child('callerId').val() === auth.uid || data.child('receiverId').val() === auth.uid)))"
      }
    }
  }
}
