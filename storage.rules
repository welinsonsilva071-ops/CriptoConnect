rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regras para avatares de usuário
    match /avatars/{userId}/{allPaths=**} {
      // Qualquer pessoa pode ler (visualizar) os avatares
      allow read;
      
      // Apenas o usuário autenticado e dono da pasta pode escrever (upload, update, delete)
      allow write: if request.auth != null && request.auth.uid == userId
                   && request.resource.size < 5 * 1024 * 1024 // Limita o tamanho do arquivo a 5MB
                   && request.resource.contentType.matches('image/.*'); // Permite apenas o upload de imagens
    }
  }
}
